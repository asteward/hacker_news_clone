<h2 class="list-group-item active">
  <%= @post.title %>
  <span id="user"> - <%= User.find(@post.user_id).username %></span>
</h2>

<ul class="list-group">
  <% @post.comments.each do |comment| %>
    <li class="list-group-item">
      <%= User.find(comment.user_id).username %>: <%= comment.content %>
    </li>
  <% end %>
</ul>

<%= link_to "Comment", new_user_post_comment_path(@post.user, @post), class: "btn btn-warning btn-lg" %>
